<div class="flex flex-col items-start justify-between pb-6 space-y-4 border-b lg:items-center lg:space-y-0 lg:flex-row">
  <h1 class="text-3xl font-semibold whitespace-nowrap">
    Purchase Page
  </h1>
</div>

<!-- Start Content -->
<div class="grid grid-cols-1 gap-5 mt-6 sm:grid-cols-2 lg:grid-cols-4">
  <% @purchases.each do |purchase| %>
    <div class="p-4 transition-shadow border rounded-lg shadow-sm hover:shadow-lg">
      <div class="flex items-start justify-between">
        <div class="flex flex-col space-y-2">
          <span class="text-gray-500"><%= purchase.description %></span>
          <span class="text-lg font-semibold"><%= link_to 'Request', purchase, class:"text-purple-400" %></span>
        </div>
        <div class="p-5 bg-gray-100 rounded-md">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" />
          </svg>
        </div>
      </div>
    </div>
  <% end %>
</div>
